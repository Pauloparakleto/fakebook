<% if !@posts.blank? %>
<% @posts.each do |post| %>
<div class="card mt-4">
  <div class="card-body">
    <div>
      <%= gravatar_for post.user, 40 %>
      <small><%= post_owner post%></small>
    </div>
    <p class="card-text"><%= link_to truncate(post.description), post %></p>
    <% if post.image %>
    <img class="card-img-top" src="..." alt="Card image cap">
    <%end%>
  </div>
</div>
<%end%>
<% else %>
Nothing Here
<%end%>
