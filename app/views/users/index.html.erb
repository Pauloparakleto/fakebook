
<div class="mt-5">
  <%= render "layouts/flash_message" %>
  <% if !@users.blank? %>
  <% @users.each do |user| %>
  <div class="card mt-4">
    <div class="card-body">
      <div>
        <%= gravatar_for user, 50 %>
        <b><%= link_to name(user), user %></b>
        <p><%= user.address %></p>
        <% if current_user.friend?(user)%>
        <p>You are friends</p>
        <% elsif current_user.pending_friend? user%>
        <button class="btn-primary">Pending Request</button>
        <% else%>
        <%= link_to 'Request Friendship', request_friend_path(user), class: 'btn btn-success rounded-0'%>
        <% end%>
      </div>
    </div>
  </div>
  <%end%>
  <% else %>
    <%= render 'friends/find_friends' %>
  <%end%>
</div>